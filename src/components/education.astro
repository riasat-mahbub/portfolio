---
import { Image } from "astro:assets";
import bracu from "../../public/bracu_alt.png";
import dal from "../../public/dal-logo.png"

interface Education {
  degree: string;
  image: ImageMetadata;
  institution: string;
  year: string;
  description: string;
  logo_bg: string;
}

const educations: Education[] = [
  {
    degree: "Bachelor of Computer Science and Engineering",
    image: bracu,
    institution: "BRAC University",
    year: "2021",
    description: "Earned comprehensive foundation in computer science, software engineering, algorithms, data structures, databases, and computer systems. Developed strong problem-solving, programming, and analytical skills by participating in both courses and programming contests.",
    logo_bg: "white"
  },
  {
    degree: "Master of Computer Science",
    image: dal,
    institution: "Dalhousie University",
    year: "2025",
    description: "Achieved cross disciplinary experience with planners and civil engineers to incorporate software engineering practices with simulation systems. Expanded my knowledge of LLM agents, simulation modeling and statistical techniques",
    logo_bg: "transparent"
  },
];
---

<section class="text-[var(--white)] py-16" id="education">
  <div class="max-w-5xl mx-auto space-y-8">
    <div class="text-center space-y-4">
      <h2 class="text-4xl md:text-5xl font-medium text-[var(--white)]">
        Education
      </h2>
      <p class="text-lg text-[var(--white-icon)] max-w-2xl mx-auto">
        <!-- Add your education description here -->
      </p>
    </div>

    <div class="grid gap-8 md:gap-12">
      {educations.map((item) => (
        <div class="border border-[var(--white-icon-tr)] rounded-xl p-4 md:p-6 bg-[#1414149c] hover:bg-[var(--white-icon-tr)] transition duration-300 flex flex-col md:flex-row items-center">
          <div class={`w-16 h-16 md:w-28 md:h-28 mb-4 md:mb-0 md:mr-4 rounded-lg flex items-center justify-center ${item.logo_bg === 'white' ? 'bg-white' : item.logo_bg === 'transparent' ? 'bg-transparent' : `bg-${item.logo_bg}`}`}>
            <Image src={item.image} alt={item.institution} class="w-12 h-12 md:w-20 md:h-20" />
          </div>
          <div class="flex flex-col flex-1 text-center md:text-left">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <h3 class="text-xl md:text-2xl font-medium text-[var(--white)]">
                {item.degree}
              </h3>
              <span class="text-[var(--white-icon)] text-sm md:text-base">
                {item.year}
              </span>
            </div>
            <h4 class="text-lg text-[var(--white-icon)] mb-2">
              {item.institution}
            </h4>
            <p class="text-[var(--white-icon)] mb-4">
              {item.description}
            </p>
          </div>

        </div>
      ))}
    </div>
  </div>
</section>